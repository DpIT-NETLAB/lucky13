<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_blue"
    tools:context=".activities.patient_path.AfterAppointmentActivity">

    <TextView
        android:id="@+id/welcomeTopDocWelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="Thank you for using TopDoc!"
        android:textColor="@color/very_dark_grey"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/welcomeTopDocPromotionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcomeTopDocPromotionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:lines="2"
        android:maxLines="5"
        android:text="  You are now in the trustworthy hands of a qualified doctor! "
        android:textColor="@color/very_dark_grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/welcomeGuideline2"
        app:layout_constraintEnd_toStartOf="@+id/welcomeGuideline5"
        app:layout_constraintStart_toStartOf="@+id/welcomeGuideline6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goHomeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_round_button"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="Go home"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/welcomeGuideline5"
        app:layout_constraintStart_toStartOf="@+id/welcomeGuideline6"
        app:layout_constraintTop_toTopOf="@+id/welcomeGuideline3"

        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/welcomeGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/welcomeGuideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/welcomeGuideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/welcomeGuideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/welcomeGuideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />
</androidx.constraintlayout.widget.ConstraintLayout>